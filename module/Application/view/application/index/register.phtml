</div>
<script type="text/javascript">
$(function () {
    $('#form-register').validate({
    	rules: {
    		username: {
    			checkURL: true
    		},
    		password: {
				required: true,
				minlength: 5
			},
			password2: {
				required: true,
				minlength: 5,
				equalTo: "#form_password"
			}
    	},
    	submitHandler: function(form) {
    		sendAjax({
    			form: $(form),
    			done: function(result) {
        			if (result.data.next)
            			location.href = result.data.next;
            	}
        	});
        	return false;
    	},
    });
});
</script>